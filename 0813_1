#zip()迭代多個序列
#enumerate() 回傳序列號(從0開始)、串列中元素值
a = [1,2,3]
b = [10,11,12,15]
c = ["x","y","z"]

for i , j , k in zip (a,b,c):
  print(i,j,k)


----------------------------------
seq1 = ["A","B","C"]
seq2 = ["one","two","three"]

------------------------
for i ,(a,b) in enumerate(zip(seq1,seq2)):
  print(f'{i+1}:{a},{b}')

----------------------------
days = ['Monday' , 'Tuesday' , 'Wednesday']
fruits = ['banana' , 'orange' , 'apple']
drinks = ['soda' , 'coffee' , 'tea' , 'beer']
desserts = ['ice cream' , 'pie' , 'puddin']

for i,(a,b,c,d) in enumerate(zip(days,fruits,drinks,desserts)):
  print(f'{a} : {b} : {c} : {d}')

------------------------------
for i ,(day,fruit,drink,dessert) in enumerate(zip(days,fruits,drinks,desserts)):
  print(f'{i+1}:{day}:{drink}:{fruit}:{dessert}')

