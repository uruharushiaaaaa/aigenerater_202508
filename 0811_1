num = eval(input("put a num range in 0 to 100:   "))

if num >= 90:
  print("A")
elif num >= 80:
  print("B")
elif num >= 70:
  print("C")
elif num >= 60:
  print("D")
else:
  print("FAILURE YOU ARE A FAILURE!!!")
