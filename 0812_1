name_list = ("A","B","C")
sc_list = (("Eng",90,"Math",80,"Chn",45),
      ("Eng",48,"Math",51,"Chn",65),
      ("Eng",100,"Math",30,"Chn",55))

name = input("Enter student's name")
if name in name_list:
  idx = name_list.index(name)
  print(*sc_list[idx])
else:
  print("Not Exist")

