n = 0
n_list =[]

while len(n_list) < 5:
  n = eval(input("Enter a num: "))
  if n %2 == 1:
    n_list.append(n)
    continue
print(*n_list)

------------------------
s = []
while True:
  a = int(input("input a num"))
  if a not in s and a %2 == 1:
    s.append(a)
    if len(s) >= 5:
      break
    else:
      print("重新輸入")

print(*s)
-----------------------------------
price = 50
inflation_rate = 0.3
year = 0
flag = True

while flag is True:
  price = price*(1+inflation_rate)
  year += 1

  if price > 75:
    flag = False
print(f"過了 {year} 年\n")
print(f'價格漲為%.2f'%(price))

---------------------
import random
random_num = random.randint(1,100)
while True:
  user_guess = eval(input("choose a num between 1 and 100:  "))
  if user_guess < random_num:
    print("bigger")
  elif user_guess > random_num:
    print("smaller")
  else:
    print("oh god damn u fking lucky ")
    play_again = input("play again?")
    if play_again == "y" or play_again == "Y":
      random_num = random.randint(1,100)
      user_guess = None
    else:
      print("the end")
      break
