--------------
sq = []
r = int(input("a number: "))
if r > 10:
  r = 10
for r in range(1,r+1):
  r = r**2
  sq.append(r)
print(*sq)
print(len(sq))
--------------------------
print(f' max: {max(sq)} \n min: {min(sq)} \n tot: {sum(sq)} \n avg: {(sum(sq))/len(sq)}  ')
-----------------------------
for X in range(2,10):
  for Y in range(1,10):
    print("%2d * %2d = %2d" % (X,Y,X*Y), end = " ")
  print()
--------------------
for g in range(1,11):
  for h in range (1,g+1):
    print('*', end="")
  print()
---------------------
buyers = [['J',1030],['C',893],['D',2000],['JD',990],['DA',2110]]

vip = []
gold = []

for z in buyers:
  if z[1] > 1000:
    vip.append(z[0])
  else:
    gold.append(z[0])
print("Vip: ",*vip)
print("Gold: ",*gold)
