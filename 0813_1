-------------------------------
stu = [1,2,3,4,5]
while (len(stu) > 0):
  print('unsign:' , end=" " )
  for iteml in stu:
    print(f'{iteml}',end = ' ')
  print()
  num = int(input("sign up by ur num: "))
  if num < 1 or num >5:
    print('not exist')
    continue
  else:
    find = False
    for i , item2 in enumerate(stu):
      if item2 == num:
        del stu[i]
        find = True
        break
    if find == False:
      print(f'{num}  has already signed up')
print('the end')
