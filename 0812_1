    break
  print(d,end=' ')
--------------------------------
score_list = [33,22,41,25,42,53,21,51,13]
s = []
count = 0

for score in score_list:
  if score < 30:
    continue
  count += 1
  s.append(score)
h = max(score_list)

print("%d of them is above 30 pts, the total is %d pts" %(count,sum(s)))
print("highest score is at pos %d , the score is %d pts"%(score_list.index(h)+1,h))
