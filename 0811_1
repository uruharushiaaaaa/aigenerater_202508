#list.append() 加在最後
num = [1,2,3,4,5,6]
num.append(7)
num

#list.insert(1,...) 把物件加到指定位置
num.insert(0,0)
num

#list.pop()未指定時移除最後面物件
num.pop(2)
num

#list.remove()一定要指定名字
num.remove(3)
num

#list.count(???) 某物件出現的次數
num.count(0)

#list.reverse()反轉
num.reverse()
num
#len長度 Max(Verstappen)最大值 Min

len(num)
max(num)
min(num)
sum(num)

print(7 in num)
print(4 not in num)
