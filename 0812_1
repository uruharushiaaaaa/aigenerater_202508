name_tuple = ("A","B","C","D","E","F","G","H","I","J","K","L")
name = input("Enter a letter:   ")

if name in name_tuple:
  idx = name_tuple.index(name)
  print("index = ", idx + 1)  #list從第0項開始起算
else:
  print("Letter Not exist")

--------------------------------------
pwd = tuple()
pwd

import os
import sys
# pwd = tuple()
if pwd == ():
  text = input("設定密碼")

  pwd = (text,)
  print("設定的密碼為:  ",pwd)
else:
  print("已設定密碼")
  ret = input("要更改密碼嗎? (y/n) ")
  if ret == "y":
    text = input("輸入目前密碼")
    if text == pwd[0]:
      print(pwd)
      text = input("輸入一個新密碼")
      pwd = (text,)
      print("新密碼為:  ", pwd)
    else:
      print("輸入密碼錯誤")
  else:
    print("關閉程式")
    sys._exit()

